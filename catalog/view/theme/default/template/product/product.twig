                {% if attribute_group.attribute_group_id == 7 %}
                  {% set a = 0 %}
                  {% for attribute in attribute_group.attribute %}
                    {% if a < 5 %}
                    <div class="row chars" data-attribute="{{ attribute.attribute_id }}">
                      <div class="col-lg-7 col-md-9 col-sm-8 col-xs-8 chars_name"><span>{{ attribute.name }}</span></div>
                      <div class="col-lg-5 col-md-3 col-sm-4 col-xs-4 chars_res"><span>{{ attribute.text }}</span></div>
                    </div>
                    {% endif %}
                    {% set a = a + 1 %}
                  {% endfor %}
                {% endif %}
