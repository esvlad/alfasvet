{{ header }}
<div id="product-product" class="container">
  <ul class="breadcrumb">
    {% for breadcrumb in breadcrumbs %}
    <li><a href="{{ breadcrumb.href }}">{{ breadcrumb.text }}</a></li>
    {% endfor %}
  </ul>
  <div class="rowmin">
    <div id="content" class="col-sm-12">
      <div class="tablet mobile product_title">
        <h1>{{ heading_title }}</h1>
        <p class="articul">{{ model }}</p>
      </div>
      <div class="rowmin">
        <div class="col-md-7 col-sm-12"> 
          {% if thumb or images %}
          <ul class="thumbnails">
            {% if thumb %}
            <li class="thumbnails_big">
              {% if special %}
              <span class="stock">Акция</span>
              {% endif %}
              {% if hit %}
              <span class="hit">Хит</span>
              {% endif %}
              <a class="thumbnail" href="{{ popup }}" title="{{ heading_title }}"><img src="{{ thumb }}" title="{{ heading_title }}" alt="{{ heading_title }}" /></a>
            </li>
            {% endif %}
            {% if images %}
              {% set i = 0 %}
              {% for image in images %}
                {% if i < 4 %}
                <li class="image-additional"><a class="thumbnail" href="{{ image.popup }}" title="{{ heading_title }}"> <img src="{{ image.thumb }}" title="{{ heading_title }}" alt="{{ heading_title }}" /></a></li>
                {% endif %}
                {% set i = i + 1 %}
              {% endfor %}
            {% endif %}
          </ul>
          {% endif %}
        </div>
        <div class="col-md-5 col-sm-12 product_caption">
          {% if not mobile %}
            <h1>{{ heading_title }}</h1>
            <p class="articul">{{ model }}</p>
            <div class="product_caption_price">
              <div class="instock_wishlist">
                <div class="instock">В наличии</div>
                <div class="wishlist" onclick="wishlist.add('{{ product_id }}');">В избранное</div>
              </div>
            </div>
            {% if attribute_groups %}
            <div class="caption">
              <h2>Характеристики</h2>
              <div class="products_characteristics">
              {% for attribute_group in attribute_groups %}
                {% if attribute_group.attribute_group_id == 7 %}
                  {% set a = 0 %}
                  {% for attribute in attribute_group.attribute %}
                    {% if a < 5 %}
                    <div class="row chars" data-attribute="{{ attribute.attribute_id }}">
                      <div class="col-lg-7 col-md-9 col-sm-8 col-xs-8 chars_name"><span>{{ attribute.name }}</span></div>
                      <div class="col-lg-5 col-md-3 col-sm-4 col-xs-4 chars_res"><span>{{ attribute.text }}</span></div>
                    </div>
                    {% endif %}
                    {% set a = a + 1 %}
                  {% endfor %}
                {% endif %}
              {% endfor %}
              </div>
            </div>
            {% endif %}
            {% if options %}
            <div class="options">
              {% for option in options %}
                <div class="options_block" data-option-id="{{ option.product_option_id }}">
                  {% if option.type == 'radio' %}
                  <div class="options_color">
                    <p>{{ option.name }}</p>
                    <div class="options_color__list clearfix">
                      {% if option_count == 1 %}
                      {% set checked = ' checked' %}
                      {% else %}
                      {% set checked = '' %}
                      {% endif %}
                      {% for option_value in option.product_option_value %}
                      <div class="inputs">
                        <input id="option{{ option.product_option_id }}{{ option_value.product_option_value_id }}" type="radio" name="option[{{ option.product_option_id }}]" value="{{ option_value.product_option_value_id }}" data-radio="color" data-option-name="{{ option_value.name }}" data-color="#6500c9"{{checked}}>
