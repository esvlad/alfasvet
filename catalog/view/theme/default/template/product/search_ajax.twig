{% if product_category %}
{% for category in product_category %}
<a href="{{category.link}}" class="scategory">
	<h4>{{category.name}}</h4>
	<p><span>перейти в категорию</span></p>
</a>
	{% for product in category.products %}
	<a href="{{product.href}}" class="product_category_search">
		<img class="search_image" src="{{product.thumb}}" alt="">
		<h4>{{product.name}}</h4>
		{% if product.attributes %}
		{% for attribute in product.attributes %}
		<p class="attributes" data-index="{{loop.index}}"><span class="attribute" data-attributes="{{attribute.attribute_id}}">{{attribute.text}}</span></p>
		{% endfor %}
		{% endif %}
		{% if product.spec %}
