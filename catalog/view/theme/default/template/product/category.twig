{{ header }}
<div id="product-category" class="container" data-category-id="{{ category_id }}">
  <ul class="breadcrumb">
    {% for breadcrumb in breadcrumbs %}
    <li><a href="{{ breadcrumb.href }}">{{ breadcrumb.text }}</a></li>
    {% endfor %}
  </ul>
  <h2>{{ heading_title }}</h2>
  <div class="row">
    {% if category_id == 59 %}
        {% set content_style = 'col-xs-12 akcii' %}
    {% else %}
        {% set content_style = 'col-md-9 col-sm-12 col-xs-12' %}
    {% endif %}
    {% if column_left or category_id == 59 %}
    {{ column_left }}
    {% else %}
    <div id="filters" class="col-md-3 col-sm-6 col-xs-12" data-category="{{category_path}}">
