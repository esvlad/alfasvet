{{ header }}{{ column_left }}
<div id="content">
  <div class="page-header">
    <div class="container-fluid">
      <div class="pull-right">
        <button type="submit" form="form-module" data-toggle="tooltip" title="{{ button_save }}" class="btn btn-primary"><i class="fa fa-save"></i></button>
        <a href="{{ cancel }}" data-toggle="tooltip" title="{{ button_cancel }}" class="btn btn-default"><i class="fa fa-reply"></i></a></div>
      <h1>{{ heading_title }}</h1>
      <ul class="breadcrumb">
        {% for breadcrumb in breadcrumbs %}
        <li><a href="{{ breadcrumb.href }}">{{ breadcrumb.text }}</a></li>
        {% endfor %}
      </ul>
    </div>
  </div>
  <div class="container-fluid">
    {% if error_warning %}
    <div class="alert alert-danger alert-dismissible"><i class="fa fa-exclamation-circle"></i> {{ error_warning }}
      <button type="button" class="close" data-dismiss="alert">&times;</button>
    </div>
    {% endif %}
    <div class="panel panel-default">
      <div class="panel-heading">
        <h3 class="panel-title"><i class="fa fa-pencil"></i> {{ text_edit }}</h3>
      </div>
      <div class="panel-body">
        <form action="{{ action }}" method="post" enctype="multipart/form-data" id="form-module" class="form-horizontal">
          <ul class="nav nav-tabs">
            <li class="active"><a href="#tab-vk" data-toggle="tab" aria-expanded="true">ВКонтакте</a></li>
            <li class=""><a href="#tab-fb" data-toggle="tab" aria-expanded="false">Facebook</a></li>
            <li><a href="#tab-ok" data-toggle="tab">Одноклассники</a></li>
            <li><a href="#tab-gg" data-toggle="tab">Googgle+</a></li>
          </ul>
          <div class="tab-content">
            <div id="tab-vk" class="tab-pane active">
              <div class="form-group">
                <label class="col-sm-2 control-label">ID Приложения</label>
                <div class="col-sm-10"><input type="text" class="form-control" name="vk[client_id]" placeholder="Client ID" value="{{vk.client_id}}"></div>
              </div>
              <div class="form-group">
                <label class="col-sm-2 control-label">Защищённый ключ</label>
                <div class="col-sm-10"><input type="text" class="form-control" name="vk[client_secret]" placeholder="Client Secret" value="{{vk.client_secret}}"></div>
              </div>
              <div class="form-group">
                <label class="col-sm-2 control-label">Статус</label>
                <div class="col-sm-10">
                  <select name="vk[status]" class="form-control">
                    {% if vk.status == 1 %}
                    <option value="1" selected="selected">Включено</option>                                                       
                    <option value="2">Отключено</option>
                    {% else %}
                    <option value="1">Включено</option>                                                       
                    <option value="2" selected="selected">Отключено</option>
                    {% endif %}
                  </select>
                </div>
              </div>
            </div>
            <div id="tab-fb" class="tab-pane">
              <div class="form-group">
                <label class="col-sm-2 control-label">ID Приложения</label>
                <div class="col-sm-10"><input type="text" class="form-control" name="fb[client_id]" placeholder="Client ID" value="{{fb.client_id}}"></div>
              </div>
              <div class="form-group">
