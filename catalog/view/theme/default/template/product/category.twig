                <div class="slideups on filters_group_title" data-group-id="fprice">
                    <h3>Цена</h3>
                </div>
                <div class="toogle_slideups filters_group_body" data-group-id="fprice">
                    <div class="range_block">
                        <div class="range range_fprice" data-min="0" data-max="5000" data-step="100" data-suffix=" Р"></div>
                        <div class="row range_values">
                            <label class="col-sm-6 col-xs-6" for="">
                                <span>от</span>
                                <input type="text" name="filters_group[price][to]" value="0 Р">
                            </label>
                            <label class="col-sm-6 col-xs-6" for="">
                                <span>до</span>
                                <input type="text" name="filters_group[price][from]" value="5 000 Р">
                            </label>
                        </div>
                    </div>
                </div>
            </div>
