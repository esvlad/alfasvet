		{% else %}
		<p>{{product.price}} <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 29.21 36.21"><g id="sl1" data-name="s1"><g id="sl2" data-name="s2"><path d="M0,17.33H16.68v4.83H0Zm0,8.59H16.68v4.83H0ZM4.31,0H9.39V36.21H4.31ZM6.92,17.33H18.5a5.4,5.4,0,0,0,2.89-.77,5.16,5.16,0,0,0,1.93-2.19A7.37,7.37,0,0,0,24,11.11a7.44,7.44,0,0,0-.69-3.29,5.19,5.19,0,0,0-1.93-2.2,5.24,5.24,0,0,0-2.89-.79H6.92V0H18.33A11.45,11.45,0,0,1,24,1.38a9.57,9.57,0,0,1,3.82,3.9,12,12,0,0,1,1.36,5.83,12,12,0,0,1-1.36,5.81A9.49,9.49,0,0,1,24,20.79a11.45,11.45,0,0,1-5.7,1.37H6.92Z"/></g></g></svg></p>
		{% endif %}
	</a>
	{% endfor %}
{% endfor %}
{% endif %}
<script>
	var bigger = false;
	$('.product_category_search').each(function(){
		if($(this).find('p.attributes[data-index="2"] > span').text().length > 7){
			bigger = true;
		}
	});

	if(bigger){
		$('.product_category_search').each(function(){
			$(this).find('p.attributes[data-index="2"]').addClass('bigger');
		});
	}
</script>