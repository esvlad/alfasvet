{{ header }}
<div id="contacts" class="container">
  <ul class="breadcrumb">
    {% for breadcrumb in breadcrumbs %}
    <li><a href="{{ breadcrumb.href }}">{{ breadcrumb.text }}</a></li>
    {% endfor %}
  </ul>
  <h2>{{ heading_title }}</h2>
  <div class="contacts">
    <div class="rowmin">
      <div class="col-md-6 col-sm-12 contacts_block">
        <div class="rowmin">
          <div class="col-md-6 col-sm-5 col-xs-12">
            <div class="contacts_phone">
              <p>{{ telephone }}</p>
              <p>{{ open }}</p>
            </div>
            <div class="contacts_name">
              <p>ООО Альфа свет</p>
              <p><a href="../Rekvizity_kompanii_Alfa_svet.pdf" target="_blank">Скачать реквизиты</a> <span class="pdf">PDF, 320 КБ</span></p>
            </div>
          </div>
          <div class="col-md-6 col-sm-5 col-xs-12">
            <div class="contacts_address">Центральный офис компании: <br />{{address}}</div>
            <div class="contacts_mail"><a href="mailto:{{email}}">{{email}}</a></div>
          </div>
        </div>
        <div class="contacts_block_btn clearfix">
          <div class="btn_black" data-toggle="modal" data-target="#dillerModal">Стать официальным дилером</div>
          <div class="btn_gold" data-toggle="modal" data-target="#tenderModal">Предложить участие в тендере</div>
        </div>
      </div>
      <div class="col-md-6 col-sm-12 contacts_map">
        <div id="map" class="maps">
          <script type="text/javascript" charset="utf-8" async src="https://api-maps.yandex.ru/services/constructor/1.0/js/?um=constructor%3Ac18caec61c33baa06524ac4fa8a71fdaf572cc75e835bd8e7aaa1330c6133741&amp;width=100%25&amp;height=350&amp;lang=ru_RU&amp;scroll=false"></script>
        </div>
      </div>
    </div>
    <div id="filials">
      <h3>Представители</h3>
      <div class="filials_container">
        <div class="rowmin filials_dropdown">
          <div class="col-lg-3 col-md-4 col-sm-6 col-xs-12">
            <div class="dropdown">
              <div id="tabFilials" class="dropdown-toggle" data-toggle="dropdown"><span>Москва и МО</span></div>
              <ul class="dropdown-menu" role="menu" aria-labelledby="tabFilials">
                {% if zones %}
                {% for zone in zones %}
                <li><a href="#filials_zone{{ zone.id }}" tabindex="-1" data-toggle="tab"><span>{{ zone.name }}</span></a></li>
                {% endfor %}
                {% endif %}
              </ul>
            </div>
          </div>
          <div class="col-lg-3 col-md-4 col-sm-6 col-xs-12 filials_dropdown_caption">Выберите интересующий <br>вас регион</div>
        </div>
        <div id="filialsTabContent" class="tab-content filials">
          {% if zones %}
          {% for zone in zones %}
          {% if zone.id == 83 %}{% set active = ' active in' %}{% else %}{% set active = '' %}{% endif %}
          <div id="filials_zone{{ zone.id }}" class="tab-pane fade{{ active }}">
            <div class="rowmin">
              {% for filial in filials[zone.id] %}
              <div class="col-lg-3 col-md-4 col-sm-6 col-xs-12">
                <div class="filial_block">
                  <div class="filial_tite">{{ filial.title }}</div>
                  <div class="filial_phone">{{ filial.phone }}</div>
                  <div class="filial_mail">{{ filial.email }}</div>
                  <div class="filial_caption">
                    <p>Режим работы:</p>
                    {{ filial.description }}
                  </div>
                </div>
              </div>
              {% endfor %}
            </div>
          </div>
          {% endfor %}
          {% endif %}
        </div>
      </div>
    </div>
  </div>
</div>
