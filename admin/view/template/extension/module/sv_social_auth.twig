                    <option value="2">Отключено</option>
                    {% else %}
                    <option value="1">Включено</option>                                                       
                    <option value="2" selected="selected">Отключено</option>
                    {% endif %}
                  </select>
                </div>
              </div>
            </div>
            <div id="tab-ok" class="tab-pane">
              <div class="form-group">
                <label class="col-sm-2 control-label">ID Приложения</label>
                <div class="col-sm-10"><input type="text" class="form-control" name="ok[client_id]" placeholder="Client ID" value="{{ok.client_id}}"></div>
              </div>
              <div class="form-group">
