                  <div class="options_color">
                    <p>{{ option.name }}</p>
                    <div class="options_color__list clearfix">
                      {% if option_count == 1 %}
                      {% set checked = ' checked' %}
                      {% else %}
                      {% set checked = '' %}
                      {% endif %}
                      {% for option_value in option.product_option_value %}
